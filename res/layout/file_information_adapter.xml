<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name"
        android:gravity="right"
        android:id="@+id/txtNameLabel"
        android:layout_alignBottom="@+id/txtName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/txtLastModifiedLabel" />

    <TextView
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtNameLabel"
        android:layout_toLeftOf="@+id/txtSize" />


    <TextView
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Modified"
        android:gravity="right"
        android:id="@+id/txtLastModifiedLabel"
        android:layout_alignBottom="@+id/txtLastModified"
        android:layout_alignTop="@+id/txtLastModified"
        android:layout_alignParentLeft="true" />

    <TextView
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtLastModified"
        android:layout_below="@+id/txtName"
        android:layout_toRightOf="@+id/txtNameLabel"
        android:layout_toLeftOf="@+id/txtSize" />

    <TextView
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Folder"
        android:gravity="right"
        android:id="@+id/txtFolderLabel"
        android:layout_alignBottom="@+id/txtFolder"
        android:layout_alignTop="@+id/txtFolder"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/txtLastModifiedLabel" />

    <TextView
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtFolder"
        android:layout_below="@+id/txtLastModified"
        android:layout_toRightOf="@+id/txtLastModifiedLabel"
        android:layout_toLeftOf="@+id/txtSize" />


    <TextView
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32.00 MB"
        android:id="@+id/txtSize"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>